<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eduardamaia.clinica.projetopooclinica.controller.DashboardController"> <top>
    <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Módulos">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Pacientes" onAction="#handlePacientesMenu" />
                        <MenuItem mnemonicParsing="false" text="Médicos" onAction="#handleMedicosMenu" />
                        <MenuItem mnemonicParsing="false" text="Consultas" onAction="#handleConsultasMenu" />
                        <MenuItem mnemonicParsing="false" text="Relatórios" onAction="#handleRelatoriosMenu" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sobre" onAction="#handleAboutMenu" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Sair">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Logout" onAction="#handleLogoutMenu" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
            <Button mnemonicParsing="false" text="Pacientes" onAction="#handlePacientesButton" />
            <Button mnemonicParsing="false" text="Médicos" onAction="#handleMedicosButton" />
            <Button mnemonicParsing="false" text="Consultas" onAction="#handleConsultasButton" />
            <Button mnemonicParsing="false" text="Relatórios" onAction="#handleRelatoriosButton" />
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </HBox>
    </VBox>
</top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Buscar Paciente (Nome/CPF):">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="searchPatientField" prefWidth="300.0" promptText="Digite nome ou CPF" />
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchPatientButton" text="Buscar" />
                <Button fx:id="registerPatientButton" mnemonicParsing="false" onAction="#handleRegisterPatientButton" text="Cadastrar Paciente" />
            </HBox>

            <TableView fx:id="patientTableView" prefHeight="350.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="nomeColumn" prefWidth="250.0" text="Nome" />
                    <TableColumn fx:id="cpfColumn" prefWidth="150.0" text="CPF" />
                    <TableColumn fx:id="telefoneColumn" prefWidth="120.0" text="Telefone" />
                    <TableColumn fx:id="acoesColumn" prefWidth="190.0" text="Ações" /> </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Label fx:id="messageLabel" textFill="RED" />

        </VBox>
    </center>

    <bottom>
        <AnchorPane prefHeight="30.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" layoutX="14.0" layoutY="8.0" text="Clínica Médica - Versão 1.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0" />
        </AnchorPane>
    </bottom>
</BorderPane>