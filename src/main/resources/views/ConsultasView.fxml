<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eduardamaia.clinica.projetopooclinica.controller.ConsultasController">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #e3eef4; -fx-padding: 0 20 0 20;">
                <ImageView fitHeight="100" fitWidth="100">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="30">
                    <Button onAction="#handlePacientesButton" prefHeight="17.0" prefWidth="68.0" styleClass="menu-button" text="Pacientes" />
                    <Button onAction="#handleMedicosButton" prefHeight="17.0" prefWidth="68.0" styleClass="menu-button" text="Médicos" />
                    <Button onAction="#handleConsultasButton" prefHeight="17.0" prefWidth="68.0" styleClass="menu-button" text="Consultas" />
                    <Button onAction="#handleRelatoriosButton" prefHeight="17.0" prefWidth="68.0" styleClass="menu-button" text="Relatórios" />
                </HBox>
            </HBox>
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <Label text="Consultas">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Label text="Selecionar Médico:" />
                            <ComboBox fx:id="comboBuscaMedico" prefWidth="150.0" promptText="Selecione..." />
                            <Label text="Selecionar Paciente:" />
                            <ComboBox fx:id="comboBuscaPaciente" prefWidth="150.0" promptText="Selecione..." />
                            <Button mnemonicParsing="false" text="Buscar" />
                            <Button fx:id="botaoAgendar" mnemonicParsing="false" onAction="#handleAgendarConsulta" prefWidth="120.0" text="Agendar Consulta" />
                            <Button fx:id="botaoEditar" mnemonicParsing="false" onAction="#handleEditarConsulta" prefWidth="80.0" text="Editar" />
                        </children>
                    </HBox>
                </children>
            </VBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tabelaConsultas" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colunaId" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="colunaPacienteId" prefWidth="200.0" text="ID do Paciente" />
                <TableColumn fx:id="colunaMedicoId" prefWidth="200.0" text="ID do Médico" />
                <TableColumn fx:id="colunaData" prefWidth="150.0" text="Data" />
                <TableColumn fx:id="colunaHora" prefWidth="150.0" text="Hora" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>