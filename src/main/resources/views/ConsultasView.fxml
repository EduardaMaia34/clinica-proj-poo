            <children>
                <Label text="Lista de Consultas Agendadas">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="tabelaConsultas" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colunaId" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="colunaPacienteId" prefWidth="120.0" text="ID do Paciente" />
                        <TableColumn fx:id="colunaMedicoId" prefWidth="120.0" text="ID do Médico" />
                        <TableColumn fx:id="colunaData" prefWidth="100.0" text="Data" />
                        <TableColumn fx:id="colunaHora" prefWidth="100.0" text="Hora" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <Label text="Detalhes da Consulta">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
