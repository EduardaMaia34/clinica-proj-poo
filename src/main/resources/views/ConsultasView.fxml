                        <Label text="ID Médico:" GridPane.rowIndex="2" />
                        <TextField fx:id="campoMedicoId" promptText="Digite o ID do médico" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Data:" GridPane.rowIndex="3" />
                        <TextField fx:id="campoData" promptText="Formato: dd/MM/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Hora:" GridPane.rowIndex="4" />
                        <TextField fx:id="campoHora" promptText="Formato: HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="botaoNovo" mnemonicParsing="false" onAction="#handleNovaConsulta" prefWidth="90.0" text="Novo" />
                        <Button fx:id="botaoSalvar" mnemonicParsing="false" onAction="#handleSalvarConsulta" prefWidth="90.0" text="Salvar" />
                        <Button fx:id="botaoEditar" mnemonicParsing="false" onAction="#handleEditarConsulta" prefWidth="90.0" text = "Editar" />
